Config { overrideRedirect = False
       , font     = "xft:Jetbrains Mono Nerd Font"
       , bgColor  = "#03020a"
       , fgColor  = "#dddddd"
       , position = TopW C 100
       , commands = [Run Cpu
                        [ "-L", "3"
                        , "-H", "10"
                        , "--high"  , "red"
                        , "--normal", "green"
			, "--template", " <total>%"
			, "-m", "2"
                        ] 10
                    , Run Memory 
		        [ "--template", " <usedratio>%"
			, "-m", "2"
			] 10
                    , Run Swap 
		        [ "--template", "<usedratio>%"
			] 10
                    , Run Date "%a %Y-%m-%d <fc=#8be9fd>%H:%M</fc>" "date" 10
                    , Run XMonadLog
		    , Run Com "/home/jade/.xmobar_scripts/volume" [] "vol" 10
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = " %XMonadLog% }{ ﰝ %vol% | %cpu% | %memory% * %swap% | %date% "
       }

